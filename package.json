{
  "name": "used-car-pr-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "cds-launchpad-plugin": "^2.2.0",
    "express": "^4"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-eban-lp": "cds watch --open eban-lp/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy used-car-pr-app --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-ekko-lp": "cds watch --open ekko-lp/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-mseg-lp": "cds watch --open mseg-lp/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      },
      "connectivity": true,
      "html5-runtime": true
    },
    "launchpad": {
      "version": "1.132.0"
    }
  },
  "sapux": [
    "app/eban-lp",
    "app/ekko-lp",
    "app/mseg-lp"
  ]
}
